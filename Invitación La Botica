<script>
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// ANIMATED BACKGROUND â€” particles + waves + orbs
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
const canvas = document.getElementById('bgCanvas');
const ctx = canvas.getContext('2d');

function resize() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
}
resize();
window.addEventListener('resize', resize);

// Floating particles
const PARTICLES = [];
const COLORS = ['rgba(43,108,176,', 'rgba(99,179,237,', 'rgba(200,164,90,', 'rgba(91,155,213,'];

for (let i = 0; i < 55; i++) {
  PARTICLES.push({
    x: Math.random() * window.innerWidth,
    y: Math.random() * window.innerHeight,
    r: 1.5 + Math.random() * 5,
    color: COLORS[Math.floor(Math.random() * COLORS.length)],
    alpha: 0.1 + Math.random() * 0.35,
    vx: (Math.random() - 0.5) * 0.5,
    vy: -0.2 - Math.random() * 0.6,
    pulse: Math.random() * Math.PI * 2,
    pulseSpeed: 0.01 + Math.random() * 0.025
  });
}

// Wave lines
const WAVES = [
  { amp: 40, freq: 0.008, speed: 0.012, y: 0.25, alpha: 0.07, width: 2, color: '#63B3ED' },
  { amp: 55, freq: 0.006, speed: 0.008, y: 0.42, alpha: 0.06, width: 1.5, color: '#2B6CB0' },
  { amp: 30, freq: 0.012, speed: 0.018, y: 0.6,  alpha: 0.05, width: 1,   color: '#90CDF4' },
  { amp: 70, freq: 0.005, speed: 0.006, y: 0.75, alpha: 0.06, width: 2.5, color: '#1A4A82' },
  { amp: 25, freq: 0.015, speed: 0.022, y: 0.88, alpha: 0.04, width: 1,   color: '#63B3ED' },
];
let tick = 0;

// Glowing orbs bg
const ORBS = [];
for (let i = 0; i < 5; i++) {
  ORBS.push({
    x: Math.random() * window.innerWidth,
    y: Math.random() * window.innerHeight,
    r: 80 + Math.random() * 160,
    color: i % 2 === 0 ? '43,108,176' : '99,179,237',
    phase: Math.random() * Math.PI * 2,
    speed: 0.004 + Math.random() * 0.008,
    vx: (Math.random() - 0.5) * 0.3,
    vy: (Math.random() - 0.5) * 0.3,
  });
}

function draw() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  // Deep gradient background
  const grad = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
  grad.addColorStop(0,   '#0b1a30');
  grad.addColorStop(0.4, '#0d2040');
  grad.addColorStop(1,   '#111828');
  ctx.fillStyle = grad;
  ctx.fillRect(0, 0, canvas.width, canvas.height);

  // Draw glowing orbs
  ORBS.forEach(o => {
    o.phase += o.speed;
    o.x += o.vx;
    o.y += o.vy;
    if (o.x < -o.r) o.x = canvas.width + o.r;
    if (o.x > canvas.width + o.r) o.x = -o.r;
    if (o.y < -o.r) o.y = canvas.height + o.r;
    if (o.y > canvas.height + o.r) o.y = -o.r;

    const pulse = 0.08 + 0.04 * Math.sin(o.phase);
    const rg = ctx.createRadialGradient(o.x, o.y, 0, o.x, o.y, o.r);
    rg.addColorStop(0,   `rgba(${o.color},${pulse})`);
    rg.addColorStop(1,   `rgba(${o.color},0)`);
    ctx.fillStyle = rg;
    ctx.beginPath();
    ctx.arc(o.x, o.y, o.r, 0, Math.PI * 2);
    ctx.fill();
  });

  // Draw animated waves
  WAVES.forEach(w => {
    ctx.beginPath();
    ctx.strokeStyle = w.color;
    ctx.globalAlpha = w.alpha;
    ctx.lineWidth = w.width;
    const baseY = canvas.height * w.y;
    ctx.moveTo(0, baseY + w.amp * Math.sin(w.freq * 0 + tick * w.speed));
    for (let x = 0; x <= canvas.width; x += 3) {
      const y = baseY + w.amp * Math.sin(w.freq * x + tick * w.speed);
      ctx.lineTo(x, y);
    }
    ctx.stroke();
    ctx.globalAlpha = 1;
  });

  // Draw particles
  PARTICLES.forEach(p => {
    p.pulse += p.pulseSpeed;
    p.x += p.vx;
    p.y += p.vy;
    if (p.y < -10) { p.y = canvas.height + 10; p.x = Math.random() * canvas.width; }
    if (p.x < -10) p.x = canvas.width + 10;
    if (p.x > canvas.width + 10) p.x = -10;

    const alpha = p.alpha * (0.7 + 0.3 * Math.sin(p.pulse));
    ctx.beginPath();
    ctx.fillStyle = p.color + alpha + ')';
    ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
    ctx.fill();
  });

  // Star-like sparkles
  if (tick % 3 === 0) {
    for (let i = 0; i < 2; i++) {
      const sx = Math.random() * canvas.width;
      const sy = Math.random() * canvas.height;
      const sa = 0.4 + Math.random() * 0.4;
      ctx.beginPath();
      ctx.fillStyle = `rgba(200,220,255,${sa})`;
      ctx.arc(sx, sy, 0.8, 0, Math.PI * 2);
      ctx.fill();
    }
  }

  tick++;
  requestAnimationFrame(draw);
}
draw();

// â”€â”€ Header floating particles (DOM) â”€â”€
const header = document.querySelector('.header');
for (let i = 0; i < 12; i++) {
  const p = document.createElement('div');
  p.className = 'particle';
  const sz = 2 + Math.random() * 4;
  p.style.cssText = `
    width:${sz}px; height:${sz}px;
    left:${10 + Math.random() * 80}%;
    bottom:${Math.random() * 40}%;
    animation-duration:${3 + Math.random() * 5}s;
    animation-delay:${Math.random() * 4}s;
    opacity:${0.3 + Math.random() * 0.5};
  `;
  header.appendChild(p);
}
</script>

</body>
</html>
